<h1>CHITTER</h1>

<ul>
	<% @peeps.each do |peep| %>
		<li><%= peep.message%> --> <%=peep.date%> (Peeped by: <%= peep.user.username %> --> <%= peep.user.name %> )</li>
	<% end %>
</ul>

<% if current_user %>
	<div id="new-peep">
		<form action="/peeps" method="post">
			Peep: <input type="text" name="peep">
			<input type="submit" value="Add peep">
		</form>
	</div>
<% else %>
  <p><a href="/sessions/new">Sign in</a></p>
  <p><a href="/users/new">Sign up</a></p>
<% end %>
